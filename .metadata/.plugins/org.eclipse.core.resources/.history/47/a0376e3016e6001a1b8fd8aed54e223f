package amanpackage;

public class Patterns {
	public void square(int r, int c)
	{
		int i,j;
		for(i=1;i<=r;i++)
		{
			for(j=1;j<=c;j++)
			{
			    System.out.print("*");
			}
			System.out.print("\n");
		}
	}
	public void triangle()
	{
		int i,j;
		for(i=0;i<=4;i++)
		{
			for(j=0;j<=4;j++)
			{
				if(j<=i)
				{
					System.out.print("*");
				}
				else
				{
					System.out.print(" ");
				}
			}
			System.out.print("\n");
		}
	}

}
